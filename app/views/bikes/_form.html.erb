<div class="bike-form-container">
<%= simple_form_for(@bike) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name, label: false, placeholder:"Bike name", input_html: {class: "form-control w-50"} %>
    <br>
    <%= f.input :description, label: false, placeholder:"Please describe your bike..", input_html: {class: "form-control w-50"} %>
    <br>
    <%= f.input :price_per_day, label: false, placeholder: "Price per day", input_html: {class: "form-control w-50"} %>
    <br>
    <%= f.input :photo, as: :file %>
    <p>Choose your city:</p>
    <!-- TODO: Review if we need to change dropdown and if collection is the right way to do it (maybe we need as: :select) -->
    <%= f.input :location, label: false, placeholder:"City", collection: [ "Berlin", "London", "New York", "Hamburg"], input_html: {class: "form-control w-50"}%>
  </div>
  <br>

<!-- TODO: Change buttons in row 14 for submit and 'Back to overview' -->
  <div class="form-actions">
    <%= link_to '<', bikes_path, { class: "btn btn-primary" }  %>       <%= f.button :submit, { class: "btn btn-primary" } %>
    </div>
<% end %>

</div>
