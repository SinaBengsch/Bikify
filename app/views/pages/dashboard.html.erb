<div class="container">
  <h1>My Bikes</h1>
  <hr>
  <br>
  <% @bikes.each do |bike|%>
  <div class="card-product">
    <img src="#" />
    <div class="card-product-infos">
      <h2><%= bike.name %></h2>
      <p><%= bike.description %></p>
    </div>
  </div>
  <% end %>
  <h1>My Rentals</h1>
  <hr>

  <h3>Upcoming</h3>
  <% @upcoming.each do |booking| %>
  <div class="card-product">
    <img src="#" />
    <div class="card-product-infos">
      <h2><%= booking.bike.name %></h2>
      <p><%= booking.bike.description %></p>
    </div>
  </div>
  <% end %>
  <h3>Past</h3>
  <% @past.each do |booking| %>
  <div class="card-product">
    <img src="#" />
    <div class="card-product-infos">
      <h2>Product name</h2>
      <p>Product description with <strong>relevant info</strong> only.</p>
    </div>

  <% end %>
  </div>
</div>
