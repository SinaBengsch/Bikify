<%= simple_form_for(@bike) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <!-- TODO: Review if we need to change dropdown and if collection is the right way to do it (maybe we need as: :select) -->
    <%= f.input :location, collection: [ "Berlin", "London", "New York"]%>
  </div>

<!-- TODO: Change buttons in row 14 for submit and 'Back to overview' -->
  <div class="form-actions">
    <%= f.button :submit, { class: "btn btn-primary" } %>   <%= link_to 'Back to overview', bikes_path, { class: "btn btn-primary" }  %>
    </div>
<% end %>
