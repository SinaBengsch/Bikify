<div class="container">
    <h4>Choose your dates</h4>
    <%= simple_form_for [@bike, @booking] do |t| %>
    <%= t.input :start_date, as: :string, label: false, placeholder: "start date", input_html: {id: "range_start", class: "form-control w-100"}%>
    <br>
    <%= t.input :end_date, as: :string, label: false, placeholder: "end date",input_html: {id: "range_end", class: "form-control w-100"}%>
    <br>
    <%= t.submit "Book bike", class: "btn btn-primary" %>
    <% end %>
</div>

